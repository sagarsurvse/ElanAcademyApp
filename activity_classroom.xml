<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="top"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c1"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:layout_marginRight="3dp"
        card_view:cardElevation="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"

            android:background="#ffffff"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/english"
                app:civ_border_width="2dp"
                app:civ_border_color="#02979c"/>

            <TextView
                android:id="@+id/icon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="English Free Master Classes"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/icon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Location: Online | Date: 15 June 2020 | Time: 12 am"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f4524d"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Read More"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



<View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:id="@+id/v1"
    android:layout_marginTop="10dp"
    android:background="#f4524d"
    android:layout_below="@id/c1"/>


<androidx.cardview.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="#ffffff"
android:id="@+id/c2"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/v1"
android:layout_marginRight="3dp"
card_view:cardElevation="10dp">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"

    android:background="#ffffff"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/icon2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/spanish"
        app:civ_border_width="2dp"
        app:civ_border_color="#02979c"/>

    <TextView
        android:id="@+id/icon_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Spanish Free Master Classes"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/icon_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Location: Online | Date: 15 June 2020 | Time: 12 am"
        android:textColor="#000000"
        android:textSize="14sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f4524d"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Read More"/>

</LinearLayout>

</androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/v2"
        android:layout_marginTop="10dp"
        android:background="#f4524d"
        android:layout_below="@id/c2"/>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c3"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/v2"
        android:layout_marginRight="3dp"
        card_view:cardElevation="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"

            android:background="#ffffff"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/french"
                app:civ_border_width="2dp"
                app:civ_border_color="#02979c"/>

            <TextView
                android:id="@+id/icon_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="French Free Master Classes"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/icon_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Location: Online | Date: 15 June 2020 | Time: 12 am"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f4524d"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Read More"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/v3"
        android:layout_marginTop="10dp"
        android:background="#f4524d"
        android:layout_below="@id/c3"/>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/c4"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/v3"
        android:layout_marginRight="3dp"
        card_view:cardElevation="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            
            android:background="#ffffff"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/german"
                app:civ_border_width="2dp"
                app:civ_border_color="#02979c"/>

            <TextView
                android:id="@+id/icon_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="German Free Master Classes"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/icon_date4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Location: Online | Date: 15 June 2020 | Time: 12 am"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f4524d"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Read More"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    </ScrollView>



</RelativeLayout>